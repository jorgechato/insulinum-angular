header.transparent .nav-buttons .icon
    color: #fff;
    opacity: .5;
    // filter: alpha(Opacity=50);

header .nav-buttons a.active button
    opacity: 1;
    // filter: alpha(Opacity=100);

header .nav-buttons .icon
    // opacity: .3;
    // filter: alpha(Opacity=30);
    width: 20px;
    height: 40px;
    font-size: 20px;
    display: inline-block;
    vertical-align: middle;
    color: rgba(iblack,.3);
    &:hover
        background-color transparent

header
    .nav-buttons
        .home
            color iblue
    a
        margin-right: 20px;
        color: rgba(iblack,.3);
        &:hover .bug
            color iyellow
        div
            font-size 15px
            font-weight 600
        button, div
            display inline-block
            vertical-align center
    a.active
        color iblue


button.icon
    color: #fff;

button.clear
    background: 0 0;
    border-radius: 0;
    padding: 0;
    margin: 0;

button
    background: transparent;
    color: maincolour;
    padding: 12px 20px;
    font-size: 18px;
    font-weight: 500;
    border-radius: 23px;
    border: 0;
    letter-spacing: .04em;
    cursor: pointer;
    outline: 0;
    &:hover
        color white
        background maincolour

button.small
    border 1px solid maincolour
    padding: 5px 10px 4px;
    font-size: 12px;
    font-weight: 400;
    letter-spacing: .029em;
    line-height: 16px;
    border-radius: 14px;

.get-app-button.transparent, .login-link.transparent
    background-color: #fff;
    color: igrey;

.get-app-button, .login-link
    position: fixed;
    right: 82px;
    top: 8px;
    z-index: 9999;

.login-link
    right: 15px;

#outer-wrapper
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    min-height: 100%;
    padding-top: 60px;
    background-color: iwhite;

#outer-wrapper.mobile header
    background-color: maincolour;
    height: 45px;
    box-shadow: none;

header .nav-buttons
    position: absolute;
    top: 0;
    left: 20px;

