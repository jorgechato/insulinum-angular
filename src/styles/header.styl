header
    display: block;
    width: 100%;
    background-color: #fff;
    text-align: center;
    color: #fff;
    margin-bottom: 30px;
    height: 40px;
    z-index: 9999;
    position: fixed;
    top: 0;
    left: 0;
    box-shadow: 0 0 5px rgba(0,0,0,.12);

header.transparent
    background transparent
    box-shadow none

header.transparent .nav-buttons a.active .icon
    opacity: 1;
    // filter: alpha(Opacity=100);
    color: #fff;

header
    .name
        margin-right 1em
        &:hover
            background transparent
            color maincolour
        img
            width 130px
            padding-top 4px

