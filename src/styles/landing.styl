#login
    background maincolour
    height 100%
    width 100%
    position absolute
    z-index 99999
    .container
        // width: 870px;
        width: 80vw;
        min-width: 440px;
        background white
        // width calc(240px + 16px)
        // height calc(290px + 16px)
        // margin calc(50% - 550px) auto
        margin 6% auto
        padding 1em
        box-flex: 0;
        flex: none;
        border-radius .3em
        box-shadow: 0px 4px 0px 0px rgba(igrey,.3);
        #singup
            align-items: flex-start;
            box-align: start;
            position relative
            margin: 68px 90px 64px;
            img
                width 240px
                height 240px
                // width 100%
            .bidi-border
                width: 1em;
                height: calc(100% + 68px + 64px + 2em);
                position: absolute;
                border-right: 10px dashed maincolour;
                top: calc(-68px - 1.3em);
                left 346px
                font-size: 1.3em;
                margin .3em auto
                z-index 1
            .singup-explain
                width: calc(100% - 346px + 92px);
                position: absolute;
                top calc(-68px - 1em);
                border-radius .3em
                left 360px
                height calc(100% + 68px + 64px + 2em)
                background iwhite
                padding 68px 50px 64px;
                h2
                    padding 0
                    margin 0
                    font-weight 400
                    font-size 3em
                    color maincolour
                p
                    margin 2em 5em
                ul
                    display inline-block
                    vertical-align top
                    padding: 0;
                    margin: 0;
                    width 32.7%
                    list-style-type: none;
                    li
                        margin .5em
                        h4
                            margin 0 1em
                            padding 0
                        span
                            border 2px solid maincolour
                            display: block;
                            padding 0
                            margin 0
                            font-size 1.3em
                            font-weight 600
                            color maincolour
                            width: 1.5em;
                            border-radius 50%
                        span, h4
                            display inline-block
                            vertical-align center
            img , .singup-explain
                display inline-block
                vertical-align center
            div
                text-align center
